<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/combineCtrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.example.admin.ijkplayer.IjkVideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#000">

            </com.example.admin.ijkplayer.IjkVideoView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="140dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp">

                    <RelativeLayout
                        android:id="@+id/view_sound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#333333"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp">

                        <ProgressBar
                            android:id="@+id/bar_sound"
                            android:layout_width="10dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="false"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/progress_vertical" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/bar_sound" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/view_light"
                    android:layout_width="30dp"
                    android:layout_height="140dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#333333"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp">

                        <ProgressBar
                            android:id="@+id/bar_light"
                            android:layout_width="10dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="false"
                            android:indeterminateOnly="false"
                            android:max="255"
                            android:progress="127"
                            android:progressDrawable="@drawable/progress_vertical" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/bar_light" />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/cap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#554477"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:padding="20dp"
                    android:text="如果奔溃了不用大惊小怪，因为这是正常现象ヾ(。￣□￣)ﾂ゜゜゜" />

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/play_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_top"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/play_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/btn_selector"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_back" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/play_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="*"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/playtime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />



                </LinearLayout>


                />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/play_controller"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_bottom"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/play_play"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_selector"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_pause" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <SeekBar
                    android:id="@+id/play_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:max="100"
                    android:maxHeight="4dp"
                    android:minHeight="4dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="0dp"
                    android:progressDrawable="@drawable/po_seekbar"
                    android:thumb="@drawable/seekbar_ratio"
                    android:thumbOffset="1.4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/play_full"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/btn_selector"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_full" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <ListView
        android:id="@+id/playlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ff88ff"
        android:dividerHeight="3dp"></ListView>


</LinearLayout>